<table id="table" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>英文名</th>
            <th>瑞典名</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
    <% @varieties.each do |variety| %>
        <tr>
            <td><%= variety.en_name %></td>
            <td><%= variety.se_name %></td>
            <td>
                <%= link_to '编辑', edit_admin_variety_path(variety) %>|
                <%= link_to '子选项', admin_variety_tags_path(variety), class: "btn" %>|
                <%= link_to '删除', admin_variety_path(variety), confirm: 'Are you sure?', method: :delete,class: "btn" %>
                <div class="btn-group">
                    <%= link_to '<i class="icon-chevron-up"></i>'.html_safe, sort_admin_variety_path('up', variety), :remote => true, :method => :put, :class => "btn", :title => "上移" %>
                    <%= link_to '<i class="icon-chevron-down"></i>'.html_safe, sort_admin_variety_path('down', variety), :remote => true, :method => :put, :class => "btn", :title => "下移" %>
                </div>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>