<table id="table" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>英文名</th>
            <th>瑞典名</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
        <tr>
            <td><%= category.en_name %></td>
            <td><%= category.se_name %></td>
            <td>
                <%= link_to '编辑', edit_admin_category_path(category) %>|
                <%= link_to '删除', admin_category_path(category), confirm: 'Are you sure?', method: :delete,class: "btn" %>
                <div class="btn-group">
                    <%= link_to '<i class="icon-chevron-up"></i>'.html_safe, sort_admin_category_path('up', category), :remote => true, :method => :put, :class => "btn", :title => "上移" %>
                    <%= link_to '<i class="icon-chevron-down"></i>'.html_safe, sort_admin_category_path('down', category), :remote => true, :method => :put, :class => "btn", :title => "下移" %>
                </div>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>