<%= content_for :head do %>
    <link rel="stylesheet" type="text/css" href="shadowbox.css">
    <script type="text/javascript" src="shadowbox.js"></script>
    <%= stylesheet_link_tag "shadowbox", :media => "all" %>
    <%= javascript_include_tag "shadowbox" %>
    <script type="text/javascript">
        Shadowbox.init();
    </script>
<% end -%>
<div class="page-header">
    <h1>图片列表</h1>
</div>

<table id="table" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>缩略图</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
    <% @photos.each do |photo| %>
        <tr>
            <td><%= photo.id %></td>
            <td><%= image_tag photo.poster_url(:small), :size => "100*60" %></td>
            <td>
                <%= link_to "查看大图", photo.poster_url(:thumb), :rel => "shadowbox" %>|
                <%= link_to '编辑', edit_admin_photo_path(photo) %>|
                <%= link_to '删除', admin_photo_path(photo), confirm: 'Are you sure?', method: :delete,class: "btn" %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
<%= link_to "增加图片", new_admin_photo_path,:class => "btn primary-btn" %>