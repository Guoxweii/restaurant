<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
	<title>Restaurant</title>
	<meta charset="utf-8">
	<%= stylesheet_link_tag "admin", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= javascript_include_tag "ckeditor/init" %>
	<%= csrf_meta_tags %>
	<%= stylesheet_link_tag "shadowbox", :media => "all" %>
	<%= javascript_include_tag "shadowbox" %>
	<script type="text/javascript">
	    Shadowbox.init();
	</script>
	<%= yield :head %>
</head>
<body>
	<h2 class="page-header" style="padding-left: 130px">the order detail</h2>
	<div id="main-container" class="container">
		<h2> Your Information </h2>
    <table class="table table-bordered table-striped" border="1">
      <tr>
        <th>
          name
        </th>
        <td>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>
          address
        </th>
        <td>
          <%= @order.address %>
        </td>
      </tr>
      <tr>
        <th>
          telephone
        </th>
        <td>
          <%= @order.telephone %>
        </td>
      </tr>
      <tr>
        <th>
          description
        </th>
        <td>
          <%= @order.description %>
        </td>
      </tr>
    </table>
    <h2> the order list</h2>
    <% @order.checks.each do |check| %>
      <table class="table table-bordered table-striped" border="1">
        <tr>
          <th>
            number
          </th>
          <td>
            <%= check.num %>
          </td>
        </tr>
        <% check.varieties.each do |variety| %>
        <tr>
          <th>
            <%= session[:local] == "en" ? variety.parent.en_name : variety.parent.se_name %>:
          </th>
          <td>
            <%= session[:local] == "en" ? variety.en_name : variety.se_name %>
          </td>
        </tr>
        <% end %>
      </table>
    <% end %>
	</div>

</body>
</html>