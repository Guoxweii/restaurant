<%= content_for :head do %>
  <%= stylesheet_link_tag "flexslider", :media => "all" %>
  <%= javascript_include_tag "jquery.flexslider-min" %>
  <script type="text/javascript">
    $(document).ready(function() {
        $('.flexslider').flexslider({
          animation: "slide"
        });
    });
  </script>
<% end -%>
<div class="content">
  <div class="flexslider">
    <ul class="slides">
      <% @photos.each_with_index do |photo, index| %>
      <li><%= image_tag photo.poster_url(:thumb), :size => "800*500"%></li>
      <% end %>
    </ul>
  </div>
</div>